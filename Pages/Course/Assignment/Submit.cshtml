@page
@model RazorPagesMovie.Pages.Course.Assignment.SubmitModel

<h2>Submit Assignment</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="AssignmentId" />

    @if (Model.Assignment != null && Model.Assignment.SubmissionType == RazorPagesMovie.Models.SubmissionType.TextEntry)
    {
        <div>
            <label for="SubmittedText">Text Submission:</label>
            <textarea id="SubmittedText" name="SubmittedText" rows="10" cols="50"></textarea>
        </div>
    }
    else if (Model.Assignment != null && Model.Assignment.SubmissionType == RazorPagesMovie.Models.SubmissionType.FileUpload)
    {
        <div>
            <label for="SubmissionFile">File Upload:</label>
            <input type="file" id="SubmissionFile" name="SubmissionFile" />
        </div>
    }
    <button type="submit">Submit</button>
</form>

