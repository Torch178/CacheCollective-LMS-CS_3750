@page
@model RazorPagesMovie.Pages.CourseCreationModel
@using RazorPagesMovie.Models

@{
    ViewData["Title"] = "CourseCreation";
}

<h1>CourseCreation</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
