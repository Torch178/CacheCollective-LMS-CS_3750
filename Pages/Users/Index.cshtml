@page "{id:int?}"
@model RazorPagesMovie.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
    //Load layout from page model
    Layout = Model.layout;
}

<h1>
@Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
</h1>
<!--container start-->
<div class="container-fluid vh-100 w-100">
    <div class="row justify-content-center align-content-start h-100 gx-3">
        <!----------------------------------------------------------------------------------------------->
        <!--cards-->
        <div class="col-8">
            <!--row-cols-2 sets max number of columns for each row to 2-->
            <div class="row row-cols-2">
                <!--col col creates a nested container-->
                @for (int i = 0; i < 4; i++)
                {
                    <div class="col col">
                        <!--Card contents-->

                        <div class="card course" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">CS 3750 - Fall 2024</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Section: 123456</h6>
                                <p class="card-text">MW Online 9:30 AM - 11:30 AM</p>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
        <!----------------------------------------------------------------------------------------------->
        <!--To-Do List-->
        <div class="col-4 h-100 justify-content-start">
                <div class="row justify-content-center align-items-center main-row">
                    <div class="col  shadow main-col bg-white">
                        <div class="row bg-primary text-white">
                            <div class="col  p-2">
                                <h4>To-Do</h4>
                            </div>
                        </div>
                        <div class="row" id="todo-container">
                            <div>

                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <!----------------------------------------------------------------------------------------------->
    </div>
</div>