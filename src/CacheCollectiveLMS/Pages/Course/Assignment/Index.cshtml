@page
@model RazorPagesMovie.Pages.Course.Assignment.IndexModel
@inject IHttpContextAccessor HttpContextAccessor;

@{
    ViewData["Title"] = "Assignments";
    var IsInstructor = HttpContext.Session.GetString("IsInstructor");
}

<h2>Assignments for @Model.CourseName</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Max Points</th>
            <th>Due Date</th>
            <th>Submission Type</th>
            @if (IsInstructor != "True")
            {
                <th>My Score</th> <!-- Grade column only for students -->
            }
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assignment in Model.Assignment)
        {
            <tr>
                <td>@assignment.Title</td>
                <td>@assignment.Description</td>
                <td>@assignment.MaxPoints</td>
                <td>@assignment.DueDate.ToShortDateString()</td>
                <td>@assignment.SubmissionType</td>

                @if (IsInstructor != "True")
                {
                    <td>
                        <!-- Display the grade, or "Not Graded" if no grade exists -->
                         Not Graded
                    </td>
                }

                <td>
                    @if (IsInstructor == "True")
                    {
                        <a asp-page="Edit" asp-route-id="@assignment.Id" asp-route-courseId="@Model.CourseId">Edit</a>
                        <span>|</span>
                        <a asp-page="Details" asp-route-id="@assignment.Id" asp-route-courseId="@Model.CourseId">Details</a>
                        <span>|</span>
                        <a asp-page="Delete" asp-route-id="@assignment.Id" asp-route-courseId="@Model.CourseId">Delete</a>
                        <span>|</span>
                        <a asp-page="Submissions/Submissions" asp-route-AssignmentId="@assignment.Id">Submissions</a>
                    }
                    else
                    {
                        <a asp-page="Details" asp-route-id="@assignment.Id" asp-route-courseId="@Model.CourseId">Details</a>
                        <a asp-page="./Submit" asp-route-AssignmentId="@assignment.Id" asp-route-CourseId="@Model.CourseId">Submit</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (IsInstructor != "True")
{
    <div class="mt-3 p-3 border bg-light">
        <strong>Total Grade:</strong> undefined
    </div>
}

@if (IsInstructor == "True")
{
    <a asp-page="./Create" asp-route-courseId="@Model.CourseId" class="btn btn-primary">Create New Assignment</a>
}
