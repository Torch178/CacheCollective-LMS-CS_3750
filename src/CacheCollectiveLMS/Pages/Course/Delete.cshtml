@page
@model RazorPagesMovie.Pages.Course.DeleteModel

@{
    ViewData["Title"] = "Delete";
    <style>
        .confirmation-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        h1 {
            text-align: center;
            font-size: 1.8em;
            margin-bottom: 20px;
        }

        hr {
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .btn-secondary {
            padding: 8px 16px;
            border-radius: 4px;
        }

        .row dt, .row dd {
            margin-bottom: 10px;
        }
    </style>
}

<div class="confirmation-container">
    <h1>Are you sure you want to delete @Model.Course.Title?</h1>

    <hr />

    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Course.Department)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Course.Department)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Course.Number)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Course.Number)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Course.Title)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Course.Title)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Course.Capacity)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Course.Capacity)
        </dd>

        <dt class="col-sm-4">
            Credit Hours
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Course.CreditHours)
        </dd>

        <dt class="col-sm-4">
            Meeting Days
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Course.MeetingDays)
        </dd>

        <dt class="col-sm-4">
            Start Time
        </dt>
        <dd class="col-sm-8">
            @(new DateTime(Model.Course.StartTime.Ticks).ToString("hh:mm tt"))
        </dd>

        <dt class="col-sm-4">
            End Time
        </dt>
        <dd class="col-sm-8">
            @(new DateTime(Model.Course.EndTime.Ticks).ToString("hh:mm tt"))
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Course.Location)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Course.Location)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Course.Instructor)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Course.Instructor)
        </dd>
    </dl>

    <form method="post" class="text-center">
        <input type="hidden" asp-for="Course.CourseId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
