@page
@model RazorPagesMovie.Pages.Course.EditModel

@{
    ViewData["Title"] = $"Edit {Model.CurrentCourse.Title}";
}

<div class="container my-5">
    <!-- Page Title -->
    <h1 class="text-center mb-4">Edit @Model.CurrentCourse.Title</h1>
    <hr />

    <!-- Edit Course Form -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="CurrentCourse.CourseId" />

                <!-- Department -->
                <div class="mb-3">
                    <label asp-for="CurrentCourse.Department" class="form-label"></label>
                    <select class="form-select" asp-for="CurrentCourse.Department">
                        <option value="CS">Computer Science</option>
                        <option value="MATH">Mathematics</option>
                        <option value="MUS">Music</option>
                        <option value="ACC">Accounting</option>
                        <option value="ENG">English</option>
                    </select>
                    <span asp-validation-for="CurrentCourse.Department" class="text-danger"></span>
                </div>

                <!-- Course Number -->
                <div class="mb-3">
                    <label asp-for="CurrentCourse.Number" class="form-label"></label>
                    <input type="number" class="form-control" asp-for="CurrentCourse.Number" required />
                    <span asp-validation-for="CurrentCourse.Number" class="text-danger"></span>
                </div>

                <!-- Title -->
                <div class="mb-3">
                    <label asp-for="CurrentCourse.Title" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="CurrentCourse.Title" required />
                    <span asp-validation-for="CurrentCourse.Title" class="text-danger"></span>
                </div>

                <!-- Capacity -->
                <div class="mb-3">
                    <label asp-for="CurrentCourse.Capacity" class="form-label"></label>
                    <input type="number" class="form-control" asp-for="CurrentCourse.Capacity" required />
                    <span asp-validation-for="CurrentCourse.Capacity" class="text-danger"></span>
                </div>

                <!-- Credit Hours -->
                <div class="mb-3">
                    <label asp-for="CurrentCourse.CreditHours" class="form-label"></label>
                    <input type="number" class="form-control" asp-for="CurrentCourse.CreditHours" required />
                    <span asp-validation-for="CurrentCourse.CreditHours" class="text-danger"></span>
                </div>

                <!-- Meeting Days -->
                <div class="mb-3">
                    <label class="form-label">Meeting Days</label><br>
                    <input type="checkbox" name="SelectedMeetingDays" value="Monday" @(Model.SelectedMeetingDays.Contains("Monday") ? "checked" : "")> Monday<br>
                    <input type="checkbox" name="SelectedMeetingDays" value="Tuesday" @(Model.SelectedMeetingDays.Contains("Tuesday") ? "checked" : "")> Tuesday<br>
                    <input type="checkbox" name="SelectedMeetingDays" value="Wednesday" @(Model.SelectedMeetingDays.Contains("Wednesday") ? "checked" : "")> Wednesday<br>
                    <input type="checkbox" name="SelectedMeetingDays" value="Thursday" @(Model.SelectedMeetingDays.Contains("Thursday") ? "checked" : "")> Thursday<br>
                    <input type="checkbox" name="SelectedMeetingDays" value="Friday" @(Model.SelectedMeetingDays.Contains("Friday") ? "checked" : "")> Friday<br>
                    <span asp-validation-for="SelectedMeetingDays" class="text-danger"></span>
                </div>

                <!-- Start Time -->
                <div class="mb-3">
                    <label asp-for="CurrentCourse.StartTime" class="form-label"></label>
                    <input type="time" class="form-control" asp-for="CurrentCourse.StartTime" required />
                    <span asp-validation-for="CurrentCourse.StartTime" class="text-danger"></span>
                </div>

                <!-- End Time -->
                <div class="mb-3">
                    <label asp-for="CurrentCourse.EndTime" class="form-label"></label>
                    <input type="time" class="form-control" asp-for="CurrentCourse.EndTime" required />
                    <span asp-validation-for="CurrentCourse.EndTime" class="text-danger"></span>
                </div>

                <!-- Location -->
                <div class="mb-3">
                    <label asp-for="CurrentCourse.Location" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="CurrentCourse.Location" required />
                    <span asp-validation-for="CurrentCourse.Location" class="text-danger"></span>
                </div>

                <!-- Submit Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
