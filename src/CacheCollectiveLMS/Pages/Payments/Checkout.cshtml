@page
@model RazorPagesMovie.Pages.Payments.CheckoutModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <title>Checkout</title>
    </head>
<body>
<div class="container-wrapper">
<!-- Form Container -->
    <div class="edit-container">
        <div class="edit-form">
            <h1>Checkout</h1>
            <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ViewModel.ID" value="@Model.tuitionId"/>
            <div class="form-group">
                <h3>Total Balance Due:</h3>
                <h5>$ @Model.balance</h5>
            </div>
            <div class="form-group">
                <label asp-for="ViewModel.charge" class="control-label">Enter Payment Amount (USD): </label>
                <input asp-for="ViewModel.charge" type="number" value="@Model.balance" min="1" max="@Model.balance" step=".01" required class="form-control" style="justify-content:flex-end; margin-left:auto;"/>
                <span asp-validation-for="ViewModel.charge" class="text-danger"></span>
            </div>
            <div class="text-center mt-3">
                <button type="submit" id="checkout-button" role="button" class="btn btn-primary">Proceed to Payment</button>
            </div>
            </form>
            <div class="text-center mt-3">
            <a class="nav-link p-0" asp-page="/Users/Account">Back to Account</a>
            </div>
        </div>
    </div>
</div>
</body>
</html>