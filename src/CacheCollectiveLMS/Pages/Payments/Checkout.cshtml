@page
@model RazorPagesMovie.Pages.Payments.CheckoutModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <title>Buy cool new product</title>
    <link rel="stylesheet" href="~/css/site.css">
    <script src="https://js.stripe.com/v3/"></script>
</head>
<body>
    <section>
        <div class="product">
            <img src="https://i.imgur.com/EHyR2nP.png" alt="The cover of Stubborn Attachments" />
            <div class="description">
                <h3>Total Balance Due:</h3>
                <h5>$ @Model.balance</h5>
            </div>
        </div>
        <form asp-action="OnPost" method="POST">
            <div class="form-group">
            <input type="hidden" asp-for="ViewModel.ID" readonly />
            <label asp-for="ViewModel.charge" class="control-label">Enter Payment Amount: </label>
            <input asp-for="ViewModel.charge" type="number" value="@Model.balance" min="1" max="@Model.balance" step=".01" required class="form-control"/>
            <span asp-validation-for="ViewModel.charge" class="text-danger"></span>
            </div>
            <button type="submit" id="checkout-button">Checkout</button>
        </form>
    </section>
</body>
</html>