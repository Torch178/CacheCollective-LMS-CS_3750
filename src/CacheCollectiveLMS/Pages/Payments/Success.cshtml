@page "{amt?}"
@model RazorPagesMovie.Pages.Payments.SuccessModel
@{
    string total = string.Format("{0:C}", Model.summary.total);
}
<!DOCTYPE html>
<html>
<head>
    <title>Thanks for your order!</title>
</head>
<body>
    <section>
        <div class="card border-success border-2 text-center mx-auto payment_card">
          <div class="card-header bg-success"></div>
          <div class="card-body">
            <h5 class="card-title">Payment Successful!</h5>
            <p class="card-text">@Model.successMsg</p>
                <div class="card mx-auto text-start border-dark border-3" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="text-center border-bottom border-dark border-bottom-2" style="padding:1rem;">Payment Summary</h5>
                        <br />
                        <span class="fw-bold text-start">Payment Id: </span><p class="card-text">@Model.summary.Id</p>
                        <span class="fw-bold text-start">Total: </span><p class="card-text">@total</p>
                        <span class="fw-bold text-start">Pay Method: </span><p class="card-text">************@Model.summary.payMethod</p>
                        <span class="fw-bold text-start">Date: </span><p class="card-text">@Model.summary.createdDate.ToString()</p>
                    </div>
                </div>
            <p>We appreciate your business! If you have any questions, please email
            <a href="mailto:orders@example.com">orders@example.com</a></p>
            <a asp-page="/Users/Account" role="button" class="btn btn-primary">Return to Account</a>
            <a asp-page="/Users/Index" role="button" class="btn btn-primary">Home</a>
          </div>
          <div class="card-footer bg-success text-body-secondary"></div>
        </div>
    </section>
</body>
</html>