@page
@model RazorPagesMovie.Pages.Users.ChangeProfilePicModel

@{
    ViewData["Title"] = "Edit Profile Picture";
    string src_path = "Images/Profile_Pics/default.png";
    if (Model.CurrentUser.ProfilePic != null)
    {
        src_path = Model.CurrentUser.ProfilePic;
    }
}

<h1>ChangeProfilePic</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ViewModel.Id" />
            <div class="mb-3">
                <label asp-for="ViewModel.ImageFile" class="form-label">Select a Picture</label>
                <input asp-for="ViewModel.ImageFile" class="form-control" id="formFile" accept=".png,.jpg,.jpeg,.gif,.tif">
                <span asp-validation-for="ViewModel.ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Profile" role="button" class="btn btn-primary">Back to Profile Page</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}