@page
@model RazorPagesMovie.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Home";
}

<body>
    <h1>
        Welcome @Html.DisplayFor(model => model.CurrentUser.FirstName) @Html.DisplayFor(model => model.CurrentUser.LastName)!
    </h1>
    <!-- Container Start -->
    <div class="container-fluid vh-100">
        <div class="row h-100 gx-3">
            <!-- Dashboard Cards -->
            <div class="col-12 col-lg-8 mb-4 mb-lg-0">
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    @foreach (var course in Model.Course)
                    {
                        <div class="col">
                            <a asp-page="/Course/Details" asp-route-id="@course.CourseId" class="text-decoration-none">
                                <div class="card h-100 border-0 shadow-sm rounded-4">
                                    <div class="card-body p-4">
                                        <h5 class="card-title fw-bold text-primary">@course.Title</h5>
                                        <h6 class="card-subtitle mb-3 text-muted">@course.Department.ToString() - @course.Number</h6>
                                        <p class="card-text mb-1">
                                            <span class="text-secondary">@course.MeetingDays @course.Location</span><br />
                                            <span class="text-body-secondary">
                                                @(course.StartTime.Hours % 12 == 0 ? 12 : course.StartTime.Hours % 12):@(course.StartTime.Minutes.ToString("D2")) @(course.StartTime.Hours >= 12 ? "PM" : "AM")
                                                -
                                                @(course.EndTime.Hours % 12 == 0 ? 12 : course.EndTime.Hours % 12):@(course.EndTime.Minutes.ToString("D2")) @(course.EndTime.Hours >= 12 ? "PM" : "AM")
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- To-Do List -->
            <div class="col-12 col-lg-4 mt-lg-0 mt-3" id="todo-area">
                <div class="shadow-sm rounded-4 overflow-hidden bg-white">
                    <!-- To-Do Header -->
                    <div class="bg-primary text-white p-2 rounded-top">
                        <h4 class="mb-0 fs-5">To-Do</h4>
                    </div>

                    <!-- To-Do Content with Rounded Corners -->
                    <div class="tab-content p-2 rounded-bottom" id="myTabContent" style="max-height: 60vh; overflow-y: auto;">
                        <div id="todo-container" class="row g-3" tabindex="0">
                            @foreach (var assignment in Model.ToDoList)
                            {
                                var course = Model.Course.First(e => e.CourseId == assignment.CourseId);
                                var dateDiff = (assignment.DueDate - DateTime.Now).Days;
                                string borderColor = dateDiff < 7 && dateDiff > 0 ? "border-warning" : dateDiff <= 0 ? "border-danger" : "border-secondary";

                                <!-- Individual To-Do Item -->
                                <div class="col-12 my-0" id="@assignment.Id">
                                    <div class="card border-start @borderColor border-3 shadow-sm rounded-3">
                                        <div class="card-body py-2 px-3">
                                            <a asp-page="/Course/Assignment/Details" asp-route-id="@assignment.Id" class="text-decoration-none">
                                                <h6 class="card-title fw-semibold text-primary mb-1 text-truncate">@course.Department @course.Number - @course.Title</h6>
                                                <p class="card-text small text-truncate mb-1">@assignment.Title</p>
                                            </a>
                                            <div class="d-flex justify-content-between align-items-center small text-muted">
                                                <span>Due: @assignment.DueDate.ToString("MMM dd, yyyy")</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
