@page
@model RazorPagesMovie.Pages.Users.ProfileModel

@{
    ViewData["Title"] = "Profile";
    string src_path = "Images/Profile_Pics/default.png";
    if (Model.currUser.ProfilePic != null)
    {
        src_path = Model.currUser.ProfilePic;
    }
}

<h1>Profile</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.currUser.ProfilePic)
        </dt>
        <dd class="col-sm-10">
            <img src="~/@src_path" alt="~/Images/Profile_Pics/default.png" class="rounded-circle float-start w-25 h-auto">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.currUser.Email)
        </dt>
        <dd class="col-sm-10" id="email">
            @Html.DisplayFor(model => model.currUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.currUser.FirstName)
        </dt>
        <dd class="col-sm-10" id="fname">
            @Html.DisplayFor(model => model.currUser.FirstName)
        </dd>
        <dt class="col-sm-2" >
            @Html.DisplayNameFor(model => model.currUser.LastName)
        </dt>
        <dd class="col-sm-10" id="lname">
            @Html.DisplayFor(model => model.currUser.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.currUser.Birthdate)
        </dt>
        <dd class="col-sm-10" id="bdate">
            @Html.DisplayFor(model => model.currUser.Birthdate)
        </dd>
        <dt class="col-sm-2">
            Account Type
        </dt>
        @if (Model.currUser.IsInstructor)
        {
            <dd class="col-sm-10" id="instructor">
                Instructor
            </dd>
        }
        else
        {
            <dd class="col-sm-10" id="student">
                Student
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.currUser.StreetAddress)
        </dt>
        <dd class="col-sm-10" id="street">
            @Html.DisplayFor(model => model.currUser.StreetAddress)
        </dd>
        @if(Model.currUser.ApartmentNum == null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.currUser.ApartmentNum)
            </dt>
            <dd class="col-sm-10" id="apartmentNum">
                N/A
            </dd>
        }
        else
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.currUser.ApartmentNum)
            </dt>
            <dd class="col-sm-10" id="apartmentNum">
                @Html.DisplayFor(model => model.currUser.ApartmentNum)
            </dd>
        }
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.currUser.City)
        </dt>
        <dd class="col-sm-10" id="city">
            @Html.DisplayFor(model => model.currUser.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.currUser.State)
        </dt>
        <dd class="col-sm-10" id="state">
            @Html.DisplayFor(model => model.currUser.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.currUser.Zip)
        </dt>
        <dd class="col-sm-10" id="zip">
            @Html.DisplayFor(model => model.currUser.Zip)
        </dd>
        
    </dl>
</div>
<div>
    <a asp-page="./ChangeProfilePic" id="edit_profile_pic" >Change Profile Picture</a> |
    <a asp-page="./Edit_Profile" id="edit_profile_link" asp-route-id="@Model.currUser.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
