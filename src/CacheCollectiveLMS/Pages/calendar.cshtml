@page
@model calendarModel
@{
    ViewData["Title"] = "Calendar";
    var eventsJson = Newtonsoft.Json.JsonConvert.SerializeObject(Model.Events);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <script src="~/lib/fullcalendar/dist/index.global.min.js"></script>
    <style>
        /* General Calendar Styles */
        #calendar {
            width: 100%; /* Ensures the calendar takes full width of its container */
            margin: 0 auto;
        }

        /* Base style for events */
        .fc-event {
            border-radius: 4px; /* Rounded corners */
            padding: 6px 12px; /* Padding for a button-like appearance */
            font-weight: normal;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            cursor: pointer;
            font-size: 0.9em;
            text-transform: uppercase;
            transition: background-color 0.3s, color 0.3s, border-color 0.3s;
        }

        /* Course events (styled with blue color) */
        .course-event {
            background-color: transparent;
            color: #4A90E2;
            border: 2px solid #4A90E2;
        }

        /* Assignment events (styled with red color) */
        .assignment-event {
            background-color: transparent;
            color: #E94E77;
            border: 2px solid #E94E77;
        }

        /* Hover effect for course events (lightens the background color) */
        .course-event:hover {
            background-color: rgba(74, 144, 226, 0.2);
            border-color: #A5C7E9;
        }

        /* Hover effect for assignment events (lightens the background color) */
        .assignment-event:hover {
            background-color: rgba(233, 78, 119, 0.2);
            border-color: #F1A7BB;
        }

        /* Title overflow handling (truncate long titles) */
        .fc-event-title {
            font-size: 0.85em;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }

        /* Remove the default event dot (blue ball) in the day grid */
        .fc-daygrid-event-dot {
            display: none !important;
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                events: @Html.Raw(eventsJson), // Pass the events from the backend
                timezone: 'local', // Use local timezone for event times
                eventClick: function (info) {
                    if (info.event.url) {
                        window.location.href = info.event.url; // Redirect to the event's URL
                    }
                    info.jsEvent.preventDefault(); // Prevent default behavior (e.g., open in a new window)
                },
                editable: true,
                droppable: true,
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,dayGridWeek,dayGridDay'
                },
                eventClassNames: function (info) {
                    // Apply different classes based on event type
                    if (info.event.extendedProps.type === 'assignment') {
                        return ['assignment-event']; // Soft Red for assignments
                    } else if (info.event.extendedProps.type === 'course') {
                        return ['course-event']; // Soft Blue for courses
                    }
                    return [];
                }
            });

            calendar.render(); // Render the calendar
        });
    </script>
</head>
<body>
    <div id="calendar"></div> <!-- Calendar container -->
</body>
</html>
